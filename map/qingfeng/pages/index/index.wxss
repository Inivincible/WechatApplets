/* pages/index/index.wxss */
.header{
  position: relative;
  display: flex;
  height: 150rpx;
}
.header text{
  font-style: normal;
  font-weight: bold;
  position: relative;
  margin: auto;
}

.body text{
  font-size: 0.9em;
  line-height: 1.6em;
  letter-spacing: 1.6 rpx;
  color: #666;
  display: flex;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-top: 10rpx;
  text-align: justify;
  text-indent: 2em;
}
.card {
  top: 10rpx;
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 12rpx 1px 1px #cccccc;
  margin: 36rpx;
  position: relative;
}

.image {
  width: 100%;
  height: 210px;
  background-color: #eeeeee;
}