.card {
    border: 4rpx solid #ffffff;
    border-radius: 10rpx;
    background-color: #ffffff;
    box-shadow: 16rpx 2rpx 2rpx #cccccc;
    margin: 16rpx;
    position: relative;
}

.image {
    width: 100%;
    height: 400rpx;
    background-color: #eeeeee;
}

/*
消除button默认样式
 */
.button {
    text-align: center;
    color: white;
    width: 100%;
    background: white;
    border: none;
    padding: 0rpx;
    margin: 0rpx;
    line-height: 1;
    font-size: 32rpx;
}

.button::after {
    border: none;
    border-radius: 0;
}

.bton0 {
    background-color: rgb(182, 80, 55);
}

.bton1 {
    background-color: rgb(8, 128, 226);
}