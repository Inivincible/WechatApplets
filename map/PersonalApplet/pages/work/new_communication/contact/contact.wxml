<!--pages/work/new_communication/contact/contact.wxml-->
<view class="page" style="padding: 0;bottom: 0;">
    <view class="page__bd" style="height: 100%;">
        <view class="weui-tab">
            <view class="weui-tab__panel">
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell weui-cell_active" >
                        <label class="weui-label">标题：</label>
                        <view class="weui-cell__bd">
                    <input id="Title" class="weui-input" bindinput="handleInput"/>
                </view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">内容：</label>
                            <view class="weui-cell__bd">
                                <textarea style="width: 700rpx;" class="weui-textarea" id="Content"  rows="4" bindinput="handleInput"></textarea>
                                <view class="weui-textarea-counter"><span>{{Content.length}}</span>/140</view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="weui-form__opr-area" style="margin: 20px 0;">
                    <button bindtap="ReleasePinion" class="weui-btn weui-btn_primary" >提交</button>
                </view>
            </view>
        </view>
    </view>
</view>

