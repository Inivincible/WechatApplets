
<view class="page" style="padding: 0;bottom: 0;">
    <view class="weui-form-preview">
        <view class="weui-form-preview__hd">
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">技能名称</label>
                <em class="weui-form-preview__value" style="font-size: 1em;">xxxx</em>
            </view>
        </view>
        <view class="weui-form-preview__bd">
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">技能内容</label>
                <textarea class="weui-form-preview__value"></textarea>
            </view>
        </view>
        
        <view class="weui-cell  weui-cell_uploader">
            <view class="weui-weui-cell__bd">
                <view class="weui-uploader">
                    <view class="weui-uploader__hd">
                        <p class="weui-uploader__title">培训证书</p>
                        <view class="weui-uploader__info">
                            0/1
                        </view>
                    </view>
                    <view class="weui-uploader__bd">
                        <ul class="weui-uploader__files" id="uploaderFiles">
                            <li class="weui-uploader__file" style="background-image: url(../../zuoyigong/shangchan/img/pic_160.png)"></li>
                        </ul>
                        <view class="weui-uploader__input-box:before">
                            <input id="uploaderInput" class="weui-uploader__input:after" type="file" accept="image/*"
                                multiple />
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="weui-form__opr-area" style="margin: 20px 0;">      
        <button class="upload-img-btn" bindtap="chooseImg" type='primary'>下载教学视频</button>  
     </view> 
</view>

