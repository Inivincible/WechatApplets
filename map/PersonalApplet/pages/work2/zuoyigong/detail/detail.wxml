<!--pages/work2/zuoyigong/detail/detail.wxml-->

<view class="page" style="padding: 0;bottom: 0;">
    <view class="weui-form-preview">
        <view class="weui-form-preview__hd">
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">任务主题</label>
                <em class="weui-form-preview__value" style="font-size: 1em;">{{TransactionDetail.theme}}</em>
            </view>
        </view>
        <view class="weui-form-preview__bd">
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">发布人</label>
                <span class="weui-form-preview__value">{{TransactionDetail.issuer}}</span>
            </view>
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">任务地点</label>
                <span class="weui-form-preview__value">{{TransactionDetail.place}}</span>
            </view>
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">联系电话</label>
                <span class="weui-form-preview__value">{{TransactionDetail.phone}}</span>
            </view>
            <view class="weui-form-preview__item">
                <label class="weui-form-preview__label">任务内容</label>
                <textarea class="weui-form-preview__value">{{TransactionDetail.commitments}}</textarea>
            </view>
        </view>
        <!-- <navigator url="../shangchan/shangchuan" hover-class="navigator-hover" open-type="navigate"> -->
            <view class="weui-form-preview__ft">
                <a class="weui-form-preview__btn weui-form-preview__btn_primary" bindtap="PickTask">接单</a>
            </view>
        <!-- </navigator> -->
    </view>
</view>
