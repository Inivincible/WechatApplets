/* pages/main/new_communication/new_communication.wxss */
.weui-panel__bd {
    width: 50%;
    float: left;
}
.weui-media-box_appmsg {
    display: block;
    margin: 0 7px 14px 7px;
    padding: 6px;
}
.weui-tab__panel {
    padding: 7px;
    padding-top: 0;
}
.weui-media-box_appmsg .weui-media-box__thumb {
    width: 100%;
    height: 100%;
    margin-bottom: 4px;
    text-align: center;
}
.weui-media-box_appmsg .weui-media-box__hd {
    width: 42vw;
    height: 42vw;
    margin: 0 auto;
}
.weui-media-box__bd .weui-media-box__title {
    padding: 8px 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: inherit;
    height: 40px;
    font-size: 1em;
}
.weui-media-box__bd p {
    color: #ed7276;
    font-size: 1.3em;
    padding: 0 6px;
}
.weui-navbar{
    margin-bottom: 10px;
}

/*横向滚动条*/
.scroll-header{
    display: flex;
    white-space: nowrap;
}
.scroll-header view{
    display: inline-block;
    width: 200rpx;
}
/*隐藏导航条*/
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}