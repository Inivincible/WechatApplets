<view class="page" style="top:0em;bottom: 0;padding: 0;" >
    <view class="weui-cells weui-cells_form" style="margin-bottom:0;">
        <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
                <label class="weui-label">原密码</label>
            </view>
            <view class="weui-cell__bd">
                <input id="password1" password="{{passWordType}}" class="weui-input" value="" placeholder="请填写原密码"  bindinput="handleInput"/>
                <span class="iconfont {{yanjingType?'icon-yanjing_yincang':'icon-yanjing_xianshi'}}" bindtap="eyeStates"></span>
            </view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <label class="weui-label">新密码</label>
            </view>
            <view class="weui-cell__bd">
                <input id="password2" password="{{passWordTypea}}" class="weui-input" value="" placeholder="请填写新密码" bindinput="handleInput"/>
                <span class="iconfont {{yanjingTypea?'icon-yanjing_yincang':'icon-yanjing_xianshi'}}" bindtap="eyeStatesa"></span>
            </view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <label class="weui-label">确认新密码</label>
            </view>
            <view class="weui-cell__bd">
                <input id="password3" password="{{passWordTypeb}}" class="weui-input" value="" placeholder="请再次填写新密码" bindinput="handleInput"/>
                <span class="iconfont {{yanjingTypeb?'icon-yanjing_yincang':'icon-yanjing_xianshi'}}" bindtap="eyeStatesb"></span>
            </view>
        </view>
        <view class="weui-form__opr-area" style="margin:48px 0;">
            <a class="weui-btn weui-btn_primary weui-btn_disabled" id="showTooltips" bindtap="buttonClick">确认修改</a>
        </view>
    </view>
</view>