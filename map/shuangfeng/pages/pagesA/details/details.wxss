/* pages/pagesA/details/details.wxss */
.card {
    top: 30rpx;
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 12rpx 1px 1px #cccccc;
    margin: 36rpx;
    position: relative;
}

.image {
    width: 100%;
    height: 210px;
    background-color: #eeeeee;
}
.notice_text {
    font-size: 0.9em;
    line-height: 1.6em;
    letter-spacing: 1.6 rpx;
    color: #666;
    display: flex;
    margin-left: 5%;
    padding-top: 50rpx;
    text-align: justify;
    text-indent: 2em;
}
.notice{
    top: 30rpx;
    font-size: 1.1em;
    line-height: 2em;
    letter-spacing: 1.6 rpx;
    color: #666;
    text-align: center;
}